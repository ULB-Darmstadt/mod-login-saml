{  
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Single IDP entry schema",
  "required" : [ "id", "patronGroup" ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "patronGroup": {
      "type": "string",
      "description": "Default patron group reference ID",
      "pattern": "^[a-fA-F0-9]{8}-[a-fA-F0-9]{4}-[1-5][a-fA-F0-9]{3}-[89abAB][a-fA-F0-9]{3}-[a-fA-F0-9]{12}$"
    }
  }
}