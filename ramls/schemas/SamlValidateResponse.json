{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Indicates whether or not the SAML configuration is valid",
  "required": ["valid"],
  "properties": {
    "valid": {
      "readOnly": true,
      "description": "Indicates whether or not the SAML configuration is valid",
      "type": "boolean"
    },
    "error": {
      "readOnly": true,
      "description": "Describes errors with the SAML configuration",
      "type": "string"
    },
    "idps": {
      "readOnly": true,
      "type": "array",
      "items": {
        "$ref": "SamlIdpEntry.json"
      }
    }
  },
    
  "anyOf": [{
    "properties": {
      "valid": { "type": "boolean", "enum": [ false ] }
    }
  },{
    "properties": {
      "valid": { "type": "boolean", "enum": [ true ] }
    },
    "required": ["idps"]
  }]
}
